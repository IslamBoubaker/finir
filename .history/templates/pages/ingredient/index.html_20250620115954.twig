{% extends 'base.html.twig' %}

{% block title %}Liste des ingrédients{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
  

<div class="example-wrapper">
    <h1>Ingrédients{{ controller_name }}! ✅</h1>
 <p>Page de test Twig OK ✅</p>
 {% for ingredient in ingredients %}
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">{{ ingredient.name }}</h5>
            <p class="card-text">Prix: {{ ingredient.price }} €</p>
            <a href="{{ path('ingredient_show', { 'id': ingredient.id }) }}" class="btn btn-primary">Voir</a>
            <a href="{{ path('ingredient_edit', { 'id': ingredient.id }) }}" class="btn btn-secondary">Modifier</a>
            <form action="{{ path('ingredient_delete', { 'id': ingredient.id }) }}" method="post" style="display:inline;">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ingredient.id) }}">
                <button type="submit" class="btn btn-danger">Supprimer</button>
            </form> 
</div>
{% endblock %}
