{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <h1>Liste des ingrédients</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        <a href="{{ path('app_ingredient_new') }}" class="btn btn-success mb-3">Ajouter un ingrédient</a>

        {% if ingredients is not empty %}
            <table class="table">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prix (€)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for ingredient in ingredients %}
                        <tr>
                            <td>{{ ingredient.name }}</td>
                            <td>{{ ingredient.price }}</td>
                            <td>
                                <a href="{{ path('app_ingredient_edit', {id: ingredient.id}) }}" class="btn btn-sm btn-primary">Modifier</a>
                                <a href="{{ path('app_ingredient_delete', {id: ingredient.id}) }}" class="btn btn-sm btn-danger">Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Aucun ingrédient pour l’instant.</p>
        {% endif %}
    </div>
{% endblock %}
